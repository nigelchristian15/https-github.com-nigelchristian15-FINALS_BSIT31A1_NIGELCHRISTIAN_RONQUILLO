@model DailyJournalSystem_Fixed.Infrastructure.Entities.JournalEntry
@{
    ViewData["Title"] = "Create Entry";
}
<h2>Create Entry</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Date</label>
        <input asp-for="Date" class="form-control" type="datetime-local" value="@Model.Date.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button class="btn btn-success">Save</button>
    <a class="btn btn-secondary" href="/Journal">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
