@model IEnumerable<DailyJournalSystem_Fixed.Infrastructure.Entities.JournalEntry>
@{
    ViewData["Title"] = "My Journal";
    var filterDate = ViewData["FilterDate"] as string;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Journal</h2>
    <a class="btn btn-success" href="/Journal/Create">Create New</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="date" name="date" class="form-control" value="@filterDate" />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">Filter</button>
        <a class="btn btn-secondary" href="/Journal">Clear</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">No journal entries found.</div>
}
else
{
    <table class="table table-striped">
        <thead><tr><th>Date</th><th>Content</th><th></th></tr></thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(item.Content.Length > 120 ? item.Content.Substring(0,120) + "..." : item.Content)</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Journal/Details/@item.Id">View</a>
                    <a class="btn btn-sm btn-secondary" href="/Journal/Edit/@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Journal/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
